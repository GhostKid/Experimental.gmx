    if weapon_auto[wep] = 0 and clicked = 1
    {
        scr_Shoot()
        clicked = 0
    }
    if weapon_auto[wep] = 1 and mouse_check_button(mb_left)
    {
        scr_Shoot()
    }
}
//Weapon switch
if keyboard_check_pressed(vk_space) and bwep != 0
{
    var twep;
    twep = wep
    wep = bwep
    bwep = twep
}
