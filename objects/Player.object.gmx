            <string>//Moving/collision
hspeed = walkSpeed * (keyboard_check(ord('D')) - keyboard_check(ord('A')))
vspeed = walkSpeed * (keyboard_check(ord('S')) - keyboard_check(ord('W')))

if hspeed != 0
if !place_free(x+hspeed,y)
{
    if hspeed &gt; 0 move_contact_solid(0,hspeed)
    if hspeed &lt; 0 move_contact_solid(180,-hspeed)
    hspeed = 0
}

if vspeed != 0
if !place_free(x+hspeed,y+vspeed)
{
    if vspeed &gt; 0 move_contact_solid(270,vspeed)
    if vspeed &lt; 0 move_contact_solid(90, -vspeed)
    vspeed = 0
}
//Looking left/right
if mouse_x &lt; x 
right = -1
if mouse_x &gt; x
right = 1
//gun back 
if mouse_y &gt; y
back = 1
if mouse_y &lt; y
back = 0
//Animation
if hspeed &lt; 0 or hspeed &gt; 0 and sprite_index != spr_walk
{
    sprite_index = spr_walk
}
if vspeed &lt; 0 or vspeed &gt; 0 and sprite_index != spr_walk
{
    sprite_index = spr_walk
}
if speed == 0
{
    if sprite_index = spr_walk
    {
        sprite_index = spr_idle
    }
}
//Speed cap
if speed &gt; walkSpeed
{
    speed = walkSpeed
}
//Shooting
if mouse_check_button_pressed(mb_left) and weapon_auto[wep] = 0 and canShoot = 1
{
    clicked = 1
    shooting = true
    
    with obj_Gun 
