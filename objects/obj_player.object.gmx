        <arguments>
          <argument>
            <kind>1</kind>
            <string>
hspeed = walkSpeed * (keyboard_check(ord('D')) - keyboard_check(ord('A')))
vspeed = walkSpeed * (keyboard_check(ord('S')) - keyboard_check(ord('W')))

if hspeed != 0
if !place_free(x+hspeed,y)
{
    if hspeed &gt; 0 move_contact_solid(0,hspeed)
    if hspeed &lt; 0 move_contact_solid(180,-hspeed)
    hspeed = 0
}

if vspeed != 0
if !place_free(x+hspeed,y+vspeed)
{
    if vspeed &gt; 0 move_contact_solid(270,vspeed)
    if vspeed &lt; 0 move_contact_solid(90, -vspeed)
    vspeed = 0
}

if speed &gt; maxSpeed
{
    speed = maxSpeed
}

if mouse_x &lt; x
right = -1
if mouse_x &gt; x 
right = 1
if mouse_y &gt; y
back = 1
if mouse_y &lt; y
back = 0


if hspeed &lt; 0 or hspeed &gt; 0 and sprite_index != spr_playerrun
{
    sprite_index = spr_playerrun
}
if vspeed &lt; 0 or vspeed &gt; 0 and sprite_index != spr_playerrun
{
    sprite_index = spr_playerrun
}
if speed == 0
{
    if sprite_index = spr_playerrun
    {
        sprite_index = spr_playeridle
    }
}


//SHOOTING
    //semi-auto weapons (pistols, shotguns, etc...)
if mouse_check_button_pressed(mb_left) and weapon_auto[wep] = 0 and ((weapon_type[wep] = 1 or weapon_type[wep] = 2) and canShoot = 1)
{
    clicked = 1
    shooting = true
}
    //Gun is empty
if ammo[weapon_type[wep]] = 0 and mouse_check_button_pressed(mb_left)
{
    clicked = 0
    shooting = false
    //sound_player(snd_empty)
}
    //Actually shooting
if canShoot = 1 and ammo[weapon_type[wep]] &gt; 0 
{
    //semi-auto
    if weapon_auto[wep] = 0 and clicked = 1
    {
        scr_Shoot()
        clicked = 0
    }
    //full-auto
    if weapon_auto[wep] = 1 and mouse_check_button(mb_left)
    scr_Shoot()
}

//SWAPPING WEAPONS
if keyboard_check_pressed(vk_space) and back_wep != 0
{
    var twep;
    twep = wep
    
    wep = back_wep
    back_wep = twep
    
    clicked = 0   
}
</string>
